<div class="container" style="margin-top: 80px; ">
    <div class="row"> {{!-- primera fila --}}
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}! </span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>

    {{!-- fin primera fila --}}
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <h2>Listado de Novedades</h2>
            <div class="d-flex">
                <div>
                    <a href="/admin/novedades/agregar" class="btn btn-success mx-2"><i class="fas fa-plus"></i>
                        Nuevo</a>
                </div>
                <form class="d-flex" action="/admin/novedades" method="get">
                    <input class="form-control me-2" type="search" placeholder="Ingrese palabra clave" aria-label="Buscar" name="q">
                    <button class="btn btn-outline-success" type="submit"> <i class="" aria-hidden="true"></i>Buscar</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>

                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">{{imagen}}</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>

                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </div>


</div>