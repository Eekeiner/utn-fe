<div class="container" style="margin-top: 80px; ">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}! </span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>
        <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <h2>Listado de Productos</h2>
            <div class="d-flex">
                <div>
                    <a href="/admin/productos/agregar" class="btn btn-success mx-2"><i class="fas fa-plus"></i>
                        Nuevo</a>
                </div>
                <form class="d-flex" action="/admin/productos" method="get">
                    <input class="form-control me-2" type="search" placeholder="Ingrese palabra clave"
                        aria-label="Buscar" name="q" {{#if q}} value="{{q}}"{{/if}}>
                    <button class="btn btn-outline-success" type="submit"> <i class=""
                            aria-hidden="true"></i>Buscar</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="row">
        <div class="col">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>

                        <th scope="col">#</th>
                        <th scope="col">Marca</th>
                         <th scope="col">Modelo</th>
                        <th scope="col">{{imagen}}</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>

                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>

                        <th scope="row">{{id}}</th>
                        <td>{{marca}}</td>
                        <td>{{modelo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/productos/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/admin/productos/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless productos.length}}
            No se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
        </div>
    </div>


</div>